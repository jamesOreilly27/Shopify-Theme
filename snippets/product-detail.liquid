{% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}
<div class="product-detail-container">
  <div class="image-container">
    <div class="product-display-image-container">
      {% for image in product.images %}
        {% if image.src == product.featured_image %}
          <img id="{{ image.src }}-displayed-image" class="product-display-image"src="{{ featured_image | img_url: 'large' }}" alt="{{ featured_image.alt | escape }}">
        {% endif %}
        <img id="{{ image.src }}-displayed-image" class="product-display-image"src="{{ image.src | img_url: 'large' }}" alt="{{ image.alt | escape }}" hidden>
      {% endfor %}
    </div>
    <div class="thumbnail-container">
      {% for image in product.images %}
        <img id="{{ image.src }}-thumbnail" src="{{ image.src | img_url: '65x65' }}" alt="{{ image.alt | escape }}">
      {% endfor %}
    </div>
  </div>

  <div class="details-container">
   
  </div>
</div>
